<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chinh Sua Nguoi Dung</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <form action="/update-user" method="post">
        <div class="container">
            <div class="form-row col-md-8">
                <div class="form-group col-md-8 align-content-center">
                    <h2 class="text-center">Thong Tin Nguoi Dung / Chinh Sua</h2>
                    <!-- an id doi voi nguoi dung dung type="hidden" -->
                    <div><input type="hidden" class="form-control" name="id" value="<%=data.id %>"></div>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" name="email" value="<%=data.email %>" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword">Password</label>
                    <input type="password" class="form-control" name="password" value="123456" disabled
                        placeholder="Password">
                </div>
            </div>
            <div class="form-row col-md-8">
                <div class="form-group col-md-6">
                    <label for="inputName">Ho Ten</label>
                    <input type="text" class="form-control" name="name" value="<%=data.name %>" placeholder="Ho Ten">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputTel">So DT</label>
                    <input type="text" class="form-control" name="tel" value="<%=data.tel %>" placeholder="So DT">
                </div>
            </div>
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-primary mt-8">Update</button>
            </div>
        </div>
    </form>

</body>

</html>